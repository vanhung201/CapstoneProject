
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main>
    <div id="bg-form">
        <img class="img-responsive rounded" src="~/assets/User/assets/images/slider.jpg" alt="macOS Yosemite Wallpaper">
        <div class="form">
            <div class="container">
                <form action="">
                    <div class="columns">
                        <div class="column col-3 col-sm-12 col-md-6 col-xl-3 mb10 px-0">
                            <div class="form-group">
                                <input class="form-input" type="text" id="input-example-1" name="SearchString" placeholder="Tìm việc">
                            </div>
                        </div>
                        <div class="column col-3 col-sm-12 col-md-6 col-xl-3 mb10 px-0">
                            <div class="form-group">
                                <select class="form-select">
                                    <option>Partime</option>
                                    <option>...</option>
                                    <option>...</option>
                                    <option>...</option>
                                </select>
                            </div>
                        </div>
                        <div class="column col-3 col-sm-12 col-md-6 col-xl-3 mb10 px-0">
                            <div class="form-group">
                                <select class="form-select">
                                    <option>Thực tập</option>
                                    <option>...</option>
                                    <option>...</option>
                                    <option>...</option>
                                </select>
                            </div>
                        </div>
                        <div class="column col-3 col-sm-12 col-md-6 col-xl-3 mb10 px-0">
                            <input class="btn btn-error w100" type="submit" value="Tim Kiem"/>
                            
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <section id="job">
        <div class="container">
            <div class="title-home mb30">
                <h3>Công việc nổi bật</h3>
            </div>
            <div class="columns pt30">
                @foreach (var item in Model)
                {
                    <div class="column col-6 col-sm-12 col-md-12 col-xl-6 mb10">
                        <a href="@Url.Action("Details", "Posts",  new { id=item.ID })">
                            <div class="item d-flex align-middle">
                                <img src="@Url.Content("~/Uploads/Images/" + item.BusinessUser.BusinessLogo)" alt="image-job">
                                <div class="content">
                                    <div class="d-flex align-middle justify-between mb-2">
                                        <h3 class="text-h4 bold-6 mb-0 ellipsis">@item.Title</h3>
                                        <div class="chip bg-error">
                                            <small class="bold-6">Mới Nhất</small>
                                        </div>
                                    </div>
                                    <p class="bold-6 text-italic mb-2">Doanh nghiệp: @item.BusinessUser.BusinessName</p>
                                    <div class="desc d-flex align-middle mb-2">
                                        @*<span class="mb-0 mr10 text-error">
                                            <i class="fa-solid fa-briefcase"></i> Xây
                                            dựng
                                        </span>
                                        <span class="mb-0 mr10 text-success">
                                            <i class="fa-solid fa-tag"></i>
                                            Fresher
                                        </span>
                                        <span class="mb-0 mr10 text-warning">
                                            <i class="fa-solid fa-tag"></i>
                                            Fulltime
                                        </span>*@
                                        <span class="mb-0 mr10 text-muted">
                                            <i class="fa-solid fa-location-dot"></i> TP.Hồ
                                            Chí
                                            Minh
                                        </span>
                                    </div>
                                    <p class="text-primary bold-6">
                                        <i>Hạn nộp: 01/01/2023</i>
                                    </p>
                                </div>
                            </div>
                        </a>

                    </div>
                }


            </div>
        </div>
    </section>

</main>