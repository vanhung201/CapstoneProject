@model BusinessConnectManagement.Models.Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div id="bg-bread">
        <div class="overlay-bread"></div>
        <div class="container">
            <div class="left">
                <div class="d-flex align-middle mb10">
                    <img class="avt" src="@Url.Content("~/Uploads/Images/" + Model.PostImage)" alt="image-job">
                    <h3 class="text-h2">@Model.Title</h3>
                </div>
               
            </div>
            <div class="right">
                <div class="text-center mt10">
                    <div class="btn btn-error">
                        Ứng Tuyển
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="description">
        <div class="container">
            <div class="columns">
                <div id="detail-job" class="column col-8 col-sm-12 col-md-12 col-xl-9 mb10">
                    <h3 class="text-h3 mb15">Chi tiết công việc</h3>
                    <div class="summary-job columns">
                        <div class="column col-6 col-sm-12 col-md-6 col-xl-6">
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/money.png" alt="money">
                                <div>
                                    <h5 class="bold-6">Mức lương</h5>
                                    <p>Thỏa thuận</p>
                                </div>
                            </div>
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/vali.png" alt="vali">
                                <div>
                                    <h5 class="bold-6">Hình thức làm việc</h5>
                                    <p>Toàn thời gian</p>
                                </div>
                            </div>
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/sex.png" alt="sex">
                                <div>
                                    <h5 class="bold-6">Giới tính</h5>
                                    <p>Không yêu cầu</p>
                                </div>
                            </div>
                        </div>
                        <div class="column col-6 col-sm-12 col-md-6 col-xl-6">
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/people.png" alt="people">
                                <div>
                                    <h5 class="bold-6">Số lượng tuyển</h5>
                                    <p>10 người</p>
                                </div>
                            </div>
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/medal.png" alt="medal">
                                <div>
                                    <h5 class="bold-6">Cấp bậc</h5>
                                    <p>Nhân viên</p>
                                </div>
                            </div>
                            <div class="item d-flex align-middle">
                                <img src="~/assets/User/assets/images/exp.png" alt="exp">
                                <div>
                                    <h5 class="bold-6">Kinh nghiệm</h5>
                                    <p>Dưới 1 năm</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="summary-job">
                        <p class="bold-7 mb10"><u>Địa điểm làm việc</u> </p>
                        <p>Thành phố Hồ Chí Minh</p>
                    </div>
                    <div class="main-job">
                        <div class="title d-flex align-middle  ">
                            <img src="~/assets/User/assets/images/files.png" alt="file">
                            <p class="mb-0 text-h4 bold-7"> Mô tả công việc</p>
                        </div>
                        <div class="p15 bg-gray mb15">
                            @Html.TextAreaFor(model => model.Description, new { @id = "Explanation", disabled = "true" })

                        </div>
                    </div>

                </div>
                <div class="column col-4 col-sm-12 col-md-12 col-xl-3 mb10">
                    <div class="table-featured">
                        <div class="title">
                            <div class="d-flex align-middle mb10">
                                <img class="avt" src="@Url.Content("~/Uploads/Images/" + Model.BusinessUser.BusinessLogo)" alt="image-job">
                                <div class=" ml15">
                                    <p class="bold-6 mb-1">@Model.BusinessUser.BusinessName</p>
                                    <p class="mb-0"><i class="fa-solid fa-paper-plane"></i> Địa chỉ</p>
                                </div>
                            </div>
                        </div>
                        <ul>
                            <li class="d-flex align-middle">
                                <i class="fa-solid fa-phone mr10"></i> @Model.BusinessUser.ContactPhone_1
                            </li>
                            <li class="d-flex align-middle">
                                <i class="fa-solid fa-envelope mr10"></i>@Model.BusinessUser.EmailContact
                            </li>
                            <li class="d-flex align-middle">
                                <i class="fa-solid fa-earth-americas mr10"></i> @Model.BusinessUser.Website
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>




    <section id="job">
        <div class="container border-top">
            <div class="py15">

                <h4 class="text-h4 mb20">Công việc khác</h4>
                @foreach (var item in ViewBag.Post)
                {
                    <a href="@Url.Action("Details", "Posts",  new { id=item.ID })">
                        <div class="item d-flex align-middle">
                            <img src="@Url.Content("~/Uploads/Images/" + item.PostImage)" alt="image-job">
                            <div class="content">
                                <div class="d-flex align-middle justify-between mb-2">
                                    <h3 class="text-h4 bold-6 mb-0 ellipsis">@item.Title</h3>
                                    <div class="chip bg-error">
                                        <small class="bold-6">Nổi bật</small>
                                    </div>
                                </div>
                                <p class="bold-6 text-italic mb-2">@item.BusinessUser.BusinessName</p>
                                <div class="desc d-flex align-middle mb-2">
                                    @*<span class="mb-0 mr10 text-error">
                        <i class="fa-solid fa-briefcase"></i> Xây
                        dựng
                    </span>
                    <span class="mb-0 mr10 text-success">
                        <i class="fa-solid fa-tag"></i>
                        Fresher
                    </span>
                    <span class="mb-0 mr10 text-warning">
                        <i class="fa-solid fa-tag"></i>
                        Fulltime
                    </span>*@
                                    <span class="mb-0 mr10 text-muted">
                                        <i class="fa-solid fa-location-dot"></i> TP.Hồ
                                        Chí
                                        Minh
                                    </span>
                                </div>
                                <p class="text-primary bold-6">
                                    <i>Hạn nộp: 01/01/2023</i>
                                </p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </section>

    <section id="news">
        <div class="container">
            <div class="title-line d-flex justify-center">
                <h3>Tin tức & Sự kiện</h3>
            </div>
            <div class="columns py20">
                <div class="column col-4 col-sm-12 col-md-12 col-xl-4 mb10">
                    <div class="item">
                        <div class="zoom-small">
                            <img src="~/assets/User/assets/images/mou1.jpg" alt="mou1">
                        </div>
                        <div class="name ellipsis">Tập đoàn Nashtech Global Việt Nam</div>
                        <p class="summary ellipsis-3 mb-0">
                            NashTech is part of Harvey Nash Group, the leading global
                            provider of talent and technology solutions. We are experts in technology, delivering
                            smart solutions that solve business challenges and create value. Our award-winning teams
                            apply deep expertise and passion to deliver complex IT projects globally.
                        </p>
                        <div class="text-center mt10">
                            <div class="btn btn-error">
                                Xem Thêm
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column col-4 col-sm-12 col-md-12 col-xl-4 mb10">
                    <div class="item">
                        <div class="zoom-small">
                            <img src="~/assets/User/assets/images/mou1.jpg" alt="mou1">
                        </div>
                        <div class="name ellipsis">Tập đoàn Nashtech Global Việt Nam</div>
                        <p class="summary ellipsis-3 mb-0">
                            NashTech is part of Harvey Nash Group, the leading global
                            provider of talent and technology solutions. We are experts in technology, delivering
                            smart solutions that solve business challenges and create value. Our award-winning teams
                            apply deep expertise and passion to deliver complex IT projects globally.
                        </p>
                        <div class="text-center mt10">
                            <div class="btn btn-error">
                                Xem Thêm
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column col-4 col-sm-12 col-md-12 col-xl-4 mb10">
                    <div class="item">
                        <div class="zoom-small">
                            <img src="~/assets/User/assets/images/mou1.jpg" alt="mou1">
                        </div>
                        <div class="name ellipsis">Tập đoàn Nashtech Global Việt Nam</div>
                        <p class="summary ellipsis-3 mb-0">
                            NashTech is part of Harvey Nash Group, the leading global
                            provider of talent and technology solutions. We are experts in technology, delivering
                            smart solutions that solve business challenges and create value. Our award-winning teams
                            apply deep expertise and passion to deliver complex IT projects globally.
                        </p>
                        <div class="text-center mt10">
                            <div class="btn btn-error">
                                Xem Thêm
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</main>
@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckeditor/ckeditor.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckfinder/ckfinder.js")"></script>
    <script type="text/javascript">

        var editor = CKEDITOR.instances['editor1'];
	 	    if (editor) { editor.destroy(true); }
        CKEDITOR.replace('Explanation', {
            toolbar: [
               
                { name: 'clipboard', groups: ['clipboard', 'undo'], items: ['Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Undo', 'Redo'] },
                { name: 'editing', groups: ['find', 'selection', 'spellchecker'], items: ['Find', 'Replace', '-', 'SelectAll', '-', 'Scayt'] },
                { name: 'forms', items: ['Form', 'Checkbox', 'Radio', 'TextField', 'Textarea', 'Select', 'Button', 'ImageButton', 'HiddenField'] },
                '/',
                { name: 'basicstyles', groups: ['basicstyles', 'cleanup'], items: ['Bold', 'Italic', 'Underline', 'Strike', 'Subscript', 'Superscript', '-', 'RemoveFormat'] },
                { name: 'paragraph', groups: ['list', 'indent', 'blocks', 'align', 'bidi'], items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote', 'CreateDiv', '-', 'JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock', '-', 'BidiLtr', 'BidiRtl', 'Language'] },
                { name: 'links', items: ['Link', 'Unlink', 'Anchor'] },
                { name: 'insert', items: ['Image', 'Flash', 'Table', 'HorizontalRule', 'Smiley', 'SpecialChar', 'PageBreak', 'Iframe'] },
                '/',
                { name: 'styles', items: ['Styles', 'Format', 'Font', 'FontSize'] },
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'tools', items: ['Maximize', 'ShowBlocks'] },
                { name: 'others', items: ['-'] },
                
            ],
            toolbarCanCollapse: true, //Button to toggle toolbar (show/hide) 
            toolbarStartupExpanded: false, //This will hide toolbar by default.
		        enterMode: CKEDITOR.ENTER_BR,
		    });
		    CKFinder.setupCKEditor(null, '@Url.Content("~/ckfinder")');


    </script>

}

