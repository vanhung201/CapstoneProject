
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div id="bg-bread">
        <div class="overlay-bread"></div>
        <div class="container">
            <div class="left">
                <div class="d-flex align-middle mb10">
                    <img class="avt" src="" alt="image-job">
                    <h3 class="text-h2">Danh Sách Ứng Tuyển</h3>
                </div>

            </div>
        </div>
    </div>

    <section >
        <div class="container">
            <table id="table1" class="display">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên Doanh Nghiệp</th>
                        <th class="text-center">Vị Trí</th>
                        <th class="text-center">Đánh Giá</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-center">Thông Tin</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>

    

</main>
@section Scripts {
    <script>
        $(function () {
            var url = "@Url.Action("getRegList", "Registration")"
            "use strict";
            (dataTable = $("#table1").DataTable({
                ajax: {
                    url: url,
                    type: "GET",
                    dataType: "json",
                    dataSrc: "",
                },
                deferRender: !0,
                columns: [
                    { data: null },
                    { data: "BusinessName" },
                    { data: "Position" },
                    { data: "Comment" },
                    { data: "Status" },
                    {
                        data: "Post_ID",
                        render: function (t, e, a) {
                            return (
                                `
                                <a href="@Url.Action("Details", "Posts")/${t}" id="business_detail" class="business_detail">
                                <div class="btn btn-update">
                                    <span class="btn-text">Xem Chi Tiết</span>
                                </div>
                                </a>
    `
                            );
                        },
                    },
                ],
            }))
            // Create Index column datatable
            dataTable.on("draw.dt", function () {
                dataTable.column(0, { search: "applied", order: "applied" }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            });

        });
    </script>
    }

