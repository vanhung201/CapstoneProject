                                <select id="Form" name="Form" class="form-select">
                                    <option value="">Chọn Hình Thức Thực Tập</option>
                                    <option value="Online">Online</option>
                                    <option value="Offline">Offline</option>
                                </select>
                            </div>
                        </div>
