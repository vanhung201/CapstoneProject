
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BCM - Đăng nhập</title>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;500;600;700&amp;display=swap"
          rel="stylesheet"
    <link href="~/assets/User/assets/css/reset.css" rel="stylesheet" />
    <link href="~/assets/User/assets/css/style2.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" type="image/x-icon">
</head>

<body>
    @if (TempData["message"] != null)
    {
        <script>
        toastr.@(TempData["messageType"])('@TempData["message"]','Thông Báo');
        </script>
    }
    <div class="wrap">
        <div class="login">
            <h2 class="login-heading">Website Quản Lý Kết Nối Doanh Nghiệp</h2>
            <div class="login-image"></div>
            <div style="margin-bottom:12px">
                <a href="@Url.Action("SignIn", "Account", new { area = "" })"><button class="login-button">Đăng nhập Bằng Email Văn Lang</button></a>
            </div>
            <a href="@Url.Action("Login", "Auth", new { area = "Business" })"><button class="login-button bu">Đăng nhập Bằng Tài Khoản Doanh Nghiệp</button></a>
        </div>
    </div>
</body>

</html>