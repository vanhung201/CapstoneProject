@model BusinessConnectManagement.Models.Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Faculty/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Posts", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    DateTime? mydate = Model.PostDay;
    string datee = mydate.Value.ToString("yyyy-MM-dd");

    /* DateTime? modifydate = Model.ModifyDay;
     string modifydatee = modifydate.Value.ToString("yyyy-MM-dd");*/

    <section class="list">
        <h1 class="list-heading">Chi tiết bài viết</h1>
        <div class="grid wide">
            <div class="tab-content">
                <div class="row">
                    @Html.HiddenFor(model => model.ID)
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Tiêu đề</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-input" } })
                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Người đăng bài</label>
                            @Html.HiddenFor(model => model.Email_ID)
                            <input list="" name="PostDay" id="daysigning" class="form-input" value="@Model.Email_ID"
                                   autocomplete="off" disabled />

                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Ngày đăng</label>
                            @Html.HiddenFor(model => model.PostDay)
                            <input list="" name="PostDay" id="daysigning" class="form-input" type="date" value="@datee"
                                   autocomplete="off" disabled />
                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Ngày cập nhật</label>
                            @Html.EditorFor(model => model.ModifyDay, new { htmlAttributes = new { @class = "form-input", disabled = "true", @Value = Model.ModifyDay.Value.Date.ToString("dd/MM/yyyy") } })
                        </div>
                    </div>
                    <div class="col l-12">
                        <div class="form-group">
                            <label for="address" class="form-label">Mô tả</label>
                            @Html.TextAreaFor(model => model.Description, new { @id = "Explanation" })
                            @* <textarea name="editor1" id="editor1" rows="10" cols="80">

                                </textarea>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="button-wrapper">
                <a class="btn btn-action btn--detail" href="@Url.Action("Index", "Posts")">Trở Về</a>
                <button class="btn btn-action btn--update" onclick="getValueCheckBoxAndSubmit()" type="submit">Cập nhật</button>
            </div>
        </div>
    </section>
}
@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckeditor/ckeditor.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckfinder/ckfinder.js")"></script>
    <script type="text/javascript">
        function getValueCheckBoxAndSubmit() {
            $("#updateForm").save();
        }

        var editor = CKEDITOR.instances['editor1'];
	 	    if (editor) { editor.destroy(true); }
		    CKEDITOR.replace('Explanation', {
		        enterMode: CKEDITOR.ENTER_BR,
		    });
		    CKFinder.setupCKEditor(null, '@Url.Content("~/ckfinder")');


    </script>

}
