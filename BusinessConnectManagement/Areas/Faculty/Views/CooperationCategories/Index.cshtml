<form action="@Url.Action("Delete", "CooperationCategories")" class="form" id="deleteForm" method="post">
    @{using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            <input name="id" id="iddele" hidden />
            <div class="form-container">
                <i class="form-icon fas fa-times-circle"></i>
                <h1 class="form-heading">Xác nhận</h1>

                <span>
                    Bạn có muốn <strong style="font-weight: bold; color: #ce1b28;">xóa danh mục  </strong>
                    này không
                    ?
                </span>

                <div class="form-group">
                    <button type="submit" class="btn btn-action btn--update">Xác nhận</button>
                </div>
            </div>
        }
    }
</form>



@section Scripts {
   
    <script type="text/javascript">
        function Submit() {
            $("#addForm").save();
        }

        function loadEditUser(id, name) {
            let formUpdate = document.getElementById("updateForm");
            formUpdate.classList.add('is-appear')
            document.getElementById('name').value = name;
            document.getElementById('id').value = id;
        }
        function loadDeleteUser(id) {
            let formDelete = document.getElementById("deleteForm");
            formDelete.classList.add('is-appear')
            document.getElementById('iddele').value = id;
           
        }
        function submitEdit() {
            $("#updateForm").save();

        }

        $(".form-icon").on("click", function () {
            formUpdate.classList.remove(isAppear);
        })
    </script>
}