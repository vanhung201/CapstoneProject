@model IEnumerable<BusinessConnectManagement.Models.CooperationCategory>

@{
    ViewBag.Title = "Cooperation Categories";
    Layout = "~/Areas/Faculty/Views/Shared/_Layout.cshtml";
}
<section class="list">
    <h1 class="list-heading">Danh mục Hợp tác</h1>
    <div class="list-table">
        <div id="filterEvent">
         
        </div>
        <table id="table_id" class="display" width="100%">
            <thead>
                <tr>
                    <th width="4%">STT</th>
                    <th class="text-center">Danh Mục</th>
                    <th class="text-center">   <button class="btn btn-action btn--create mr-1" href="#">Thêm</button></th>
                </tr>
            </thead>
            <tbody>
                @{int count = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@count</td>
                        <td class="text-center">@item.CooperationCategoriesName</td>
                        <td class="text-center">
                            <a class="btn btn-action btn--update" onclick="loadEditUser('@item.ID', '@item.CooperationCategoriesName')">Cập nhật</a>
                            <a class="btn btn-action btn--delete" onclick="loadDeleteUser('@item.ID', '@item.CooperationCategoriesName')">Xóa</a>
                        </td>
                    </tr>
                    count++;
                }

            </tbody>
        </table>
    </div>
</section>

<form action="@Url.Action("Create", "CooperationCategories")" class="form" id="addForm" method="post">
    <div class="form-container">
        <i class="form-icon fas fa-times-circle"></i>
        <h1 class="form-heading">Thêm Danh Mục</h1>
        <div class="form-group">
            <label for="cooperationName" class="form-label">Danh Mục</label>
            <input name="CooperationCategoriesName" type="text" class="form-input">
        </div>
        <div class="form-group">
            <button class="btn btn-action btn--update" onclick="Submit()" type="submit">Xác Nhận</button>
        </div>
    </div>
</form>


<form action="@Url.Action("Edit", "CooperationCategories")" class="form" id="updateForm" method="post">
    <input name="id" id="id" hidden />
    <div class="form-container">
        <i class="form-icon fas fa-times-circle"></i>
        <h1 class="form-heading">Cập nhật Danh mục</h1>
        <div class="form-group">
            <label for="cooperationName" class="form-label">Danh Mục</label>
            <input type="text" name="CooperationCategoriesName" class="form-input" id="name" required>
        </div>
        <div class="form-group">
            <button class="btn btn-action btn--update" onclick="submitEdit()" type="submit">Xác Nhận</button>
        </div>
    </div>
</form>
