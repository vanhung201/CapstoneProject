@model IEnumerable<BusinessConnectManagement.Models.VanLangUser>
@{
    ViewBag.Title = "AuthorizeList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="list">
    <h1 class="list-heading">Danh sách đăng nhập</h1>
    <div class="list-table">
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Chức vụ</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                var status = item.Status == true ? "Đang Hoạt Động" : "Bị Khóa";
                <tbody>
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.FullName)</td>
                        <td> @Html.DisplayFor(modelItem => item.Email)</td>
                        <td> @Html.DisplayFor(modelItem => item.Role.Role_Name)</td>
                        <td>
                            @status
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Email })
                            <button class="btn btn-action btn--update">Cập nhật</button>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</section>

    <form action="" class="form">
        <div class="form-container">
            <i class="form-icon fas fa-times-circle"></i>
            <h1 class="form-heading">Cập nhật vai trò</h1>
            <div class="form-group">
                <label for="email" class="form-label">Họ và Tên</label>
                <input name="email" id="email" class="form-input" autocomplete="off" />
            </div>
            <div class="form-group">
                <label for="role" class="form-label">Vai trò</label>
                <input list="roleList" name="role" id="role" class="form-input" autocomplete="off" />
                <datalist id="roleList">
                    <option value="Faculty">Ban chủ nhiệm Khoa</option>
                    <option value="Mentor">Giảng viên hướng dẫn</option>
                    <option value="Student">Sinh viên</option>
                </datalist>
            </div>
            <div class="form-group">
                <label class="form-label form-label--active">
                    Đang hoạt động
                    <input type="radio" name="status" id="active" class="form-input" />
                    <span class="form-radio form-radio--active"></span>
                </label>
                <label class="form-label form-label--block">
                    Bị khóa
                    <input type="radio" name="status" id="block" class="form-input" />
                    <span class="form-radio form-radio--block"></span>
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="form-button">Lưu</button>
            </div>
        </div>
    </form>

