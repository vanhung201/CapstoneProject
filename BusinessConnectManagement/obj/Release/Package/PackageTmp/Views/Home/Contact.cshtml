
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!---------------------------------------------------
      // Contact : info
      //----------------------------------------------->
    <section id="contact" style="margin-top: 40px">
        <div class="container">
            <div class="columns">
                <div class="column col-md-12 col-sm-12 col-xl-6">
                    <div class="px15">
                        <!-- .... -->
                        <h3 class="text-h2 main-text-color mb10">Yêu cầu của bạn</h3>
                        <form action="">
                            <div class="form-group">
                                <label class="form-label" for="input-example-1">Họ Tên</label>
                                <input class="form-input" type="text" id="fullnam" placeholder="Họ và tên">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="input-example-1">Số điện thoại</label>
                                <input class="form-input" type="number" id="phone" placeholder="Số điện thoại">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="input-example-1">Email</label>
                                <input class="form-input" type="email" id="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="note">Ghi chú</label>
                                <textarea class="form-input" id="note" placeholder="Ghi chú (nếu có)" rows="5"
                                          cols="100"></textarea>
                            </div>
                            <div class="mt10">
                                <div class="btn btn-submit">
                                    Gửi yêu cầu
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="column col-md-12 col-sm-12 col-xl-6">
                    <!-- .... -->
                    <h3 class="text-h2 main-text-color mb10">
                        Trường Đại Học Văn Lang
                    </h3>
                    <table class="table bg-white">
                        <thead style="background-color: #374090 !important">
                            <tr class="main-bg-color text-uppercase" style="background-color: #374090 !important">
                                <th>Trường Đại Học Văn Lang - Phòng tuyển dụng</th>
                            </tr>
                        </thead>
