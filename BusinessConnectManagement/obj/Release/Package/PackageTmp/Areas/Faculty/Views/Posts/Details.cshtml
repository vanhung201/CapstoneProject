@model BusinessConnectManagement.Models.Post

@{
    ViewBag.Title = "Post Details";
    Layout = "~/Areas/Faculty/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

@{ 
    DateTime? mydate = Model.PostDay;
    string datee = mydate.Value.ToString("yyyy-MM-dd");
 }
       
    <form id="addForm" method="post" action="@Url.Action("Edit", "Posts")" enctype="multipart/form-data">
        <section class="list">
            <h1 class="list-heading">Chi Tiết Bài Viết</h1>
            <div class="grid wide">
                <div class="tab-content">
                    <div class="row">
                        @Html.HiddenFor(model => model.ID)
                        <div class="col l-6">
                            <div class="form-group">
                                <label class="form-label">Tiêu đề</label>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-input",  disabled = "true" } })
                            </div>
                        </div>
                        <div class="col l-6">
                            <div class="form-group">
                                <label class="form-label">Người đăng bài</label>
                                @Html.HiddenFor(model => model.Email_ID)
                                <input list="" name="PostDay" id="daysigning" class="form-input" value="@Model.Email_ID"
                                       autocomplete="off" disabled />

                            </div>
                        </div>
                        <div class="col l-6">
                            <div class="form-group">
                                <label class="form-label">Doanh Nghiệp</label>
                                @Html.HiddenFor(model => model.Business_ID)
                                <input list="" name="PostDay" id="daysigning" class="form-input" value="@Model.BusinessUser.BusinessName"
                                       autocomplete="off" disabled />

                            </div>
                        </div>

                        <div class="col l-6">
                            <div class="form-group">
                                <label class="form-label">Ngày đăng</label>
                                @Html.HiddenFor(model => model.PostDay)
                                <input list="" name="PostDay" id="daysigning" class="form-input" type="date" value="@datee"
                                       autocomplete="off" disabled />
                            </div>
                        </div>
                        <div class="col l-6">
                            <div class="form-group">
                                <label class="form-label">Ngày cập nhật</label>
                                @Html.EditorFor(model => model.ModifyDay, new { htmlAttributes = new { @class = "form-input", disabled = "true", @Value = Model.ModifyDay.Value.Date.ToString("dd/MM/yyyy") }})
                            </div>
                        </div>
                        <div class="col l-11">
                            <div class="form-group">
                                <label for="logo" class="form-label">Logo</label>
                                <div style="display: flex; flex-direction: column">
                                    <img src="@Url.Content("~/Uploads/Images/" + Model.PostImage)" style="width: 22rem; height:fit-content; margin: 0 0 1rem 0;" />
                                   
                                    @Html.HiddenFor(model => model.PostImage)
                                </div>
                            </div>
                        </div>
                        <div class="col l-12">
                            <div class="form-group">
                                <label for="address" class="form-label">Mô tả</label>
                                @Html.TextAreaFor(model => model.Description, new { @id = "Explanation" , disabled = "true" })
                                @* <textarea name="editor1" id="editor1" rows="10" cols="80">

                </textarea>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="button-wrapper">
                    <a class="btn btn--add" href="@Url.Action("Index", "Posts")">Trở Về</a>
                    <a href="@Url.Action("Edit", "Posts",  new { id=Model.ID })" class="btn btn--update">Cập nhật</a>
                </div>
            </div>
        </section>
        </form>
        
        @section Scripts {
            <script type="text/javascript" src="@Url.Content("~/assets/js/ckeditor/ckeditor.js")"></script>
            <script type="text/javascript" src="@Url.Content("~/assets/js/ckfinder/ckfinder.js")"></script>
            <script type="text/javascript">
        function getValueCheckBoxAndSubmit() {
            $("#updateForm").save();
        }

        var editor = CKEDITOR.instances['editor1'];
	 	    if (editor) { editor.destroy(true); }
		    CKEDITOR.replace('Explanation', {
		        enterMode: CKEDITOR.ENTER_BR,
		    });
		    CKFinder.setupCKEditor(null, '@Url.Content("~/ckfinder")');


            </script>

        }
