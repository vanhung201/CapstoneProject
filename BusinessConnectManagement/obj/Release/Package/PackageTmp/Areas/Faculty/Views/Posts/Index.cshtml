                    $('.PostI').on('change', function () {
                        var selectedOptions = $('.PostI option:selected');
                        var quantityInputsContainer = $('<div style="display: flex; flex-wrap: wrap; max-width:345px"></div>');
                        selectedOptions.each(function () {
                            var optionValue = $(this).val();

                            // Find the corresponding item in the postIntern array using its id
