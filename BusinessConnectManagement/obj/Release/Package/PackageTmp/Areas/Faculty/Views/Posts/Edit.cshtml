@model BusinessConnectManagement.Models.Post

@{
    ViewBag.Title = "Update Post";
    Layout = "~/Areas/Faculty/Views/Shared/_Layout.cshtml";
}


@Html.AntiForgeryToken()
@{ DateTime? mydate = Model.PostDay;
    string datee = mydate.Value.ToString("yyyy-MM-dd"); }

       /* DateTime? modifydate = Model.ModifyDay;
        string modifydatee = modifydate.Value.ToString("yyyy-MM-dd");*/
<form id="addForm" method="post" action="@Url.Action("Edit", "Posts")" enctype="multipart/form-data">
    <section class="list">
        <h1 class="list-heading">Chỉnh Sửa Bài Viết</h1>
        <div class="grid wide">
            <div class="tab-content">
                <div class="row">
                    @Html.HiddenFor(model => model.ID)
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Tiêu đề</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-input" } })
                        </div>
                        <div class="form-group">
                            <label class="form-label" hidden></label>
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Người đăng bài</label>
                            @Html.HiddenFor(model => model.Email_ID)
                            <input list="" name="PostDay" id="daysigning" class="form-input" value="@Model.Email_ID"
                                   autocomplete="off" disabled />

                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Doanh Nghiệp</label>
                            @Html.HiddenFor(model => model.Business_ID)
                            <input list="" name="PostDay" id="daysigning" class="form-input" value="@Model.BusinessUser.BusinessName"
                                   autocomplete="off" disabled />

                        </div>
                    </div>

                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Ngày đăng</label>
                            @Html.HiddenFor(model => model.PostDay)
                            <input list="" name="PostDay" id="daysigning" class="form-input" type="date" value="@datee"
                                   autocomplete="off" disabled />
                        </div>
                    </div>
                    <div class="col l-6">
                        <div class="form-group">
                            <label class="form-label">Ngày cập nhật</label>
                            @Html.EditorFor(model => model.ModifyDay, new { htmlAttributes = new { @class = "form-input", disabled = "true", @Value = Model.ModifyDay.Value.Date.ToString("dd/MM/yyyy") } })
                        </div>
                    </div>
                    <div class="col l-11">
                        <div class="form-group">
                            <label for="logo" class="form-label">Logo</label>
                            <div style="display: flex; flex-direction: column">
                                <img src="@Url.Content("~/Uploads/Images/" + Model.PostImage)" style="width: 22rem; height:fit-content; margin: 0 0 1rem 0;" />
                                <input name="logo" onchange="validateSize(this)" class="form-input" type="file" id="logo"
                                       accept="image/png, image/gif, image/jpeg" />
                                @Html.HiddenFor(model => model.PostImage)
                            </div>
                        </div>
                    </div>
                    <div class="col l-12">
                        <div class="form-group">
                            <label for="address" class="form-label">Mô tả</label>
                            @Html.TextAreaFor(model => model.Description, new { @id = "Explanation" })
                            @* <textarea name="editor1" id="editor1" rows="10" cols="80">

                                </textarea>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="button-wrapper">
                <a class="btn btn-action btn--detail" href="@Url.Action("Index", "Posts")">Trở Về</a>
                <button class="btn btn--update"  onclick="checkImage()" type="submit" >Cập nhật</button>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckeditor/ckeditor.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/assets/js/ckfinder/ckfinder.js")"></script>
    <script type="text/javascript">
        
        function validateSize(input) {
            

            var fup = document.getElementById('logo');
            var fileName = fup.value;
            var ext = fileName.substring(fileName.lastIndexOf('.') + 1);
            if (fileName == '' || ext == "gif" || ext == "GIF" || ext == "PNG" || ext == "png" || ext == "jpg" || ext == "JPG" || ext == "bmp" || ext == "BMP") {
                const fileSize = input.files[0].size / 1024 / 1024; // in MB
                var fup = document.getElementById('logo');
                if (fileSize < 2) {
                    $("#logo").prop('required', false);
                    return true;
                } else {
                    // Proceed further
                    alert('Dung lượng hình ảnh không vượt quá 2MB');
                    fup.value = '';
                    return false;
                }
                return true;
            }
            else {
                fup.value = '';
                alert("Chỉ được tải lên hình ảnh dạng PNG, JPG, GIF và BMP");
               
                return false;
            }
        }
        
        CKEDITOR.replace('Explanation');


    </script>

}
