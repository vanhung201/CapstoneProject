                    $('#businessCommentEx').text(res[0].BusinessComment)
                    $('#businessComment2Ex').text(res[0].BusinessComment2)
                }
            })
         })
        $(function () {
            $("#btn--submitExport").click(function () {
                $("input[name='GridHtml']").val($("#Grid").html());
            })
        })
    </script>
